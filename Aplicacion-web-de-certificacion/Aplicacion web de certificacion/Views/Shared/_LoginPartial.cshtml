@using Microsoft.AspNetCore.Identity
@using Aplicacion_web_de_certificacion.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager



@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Bienvenido @UserManager.GetUserName(User)!</a>
            </li>
            @if (User.IsInRole("Admin") || User.IsInRole("JefeOCP") || User.IsInRole("JefeLab"))
            {

                <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a></li>
            }
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Desconectarse</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrarse</a></li>

        <li><a asp-area="" asp-controller="Account" asp-action="Login">Ingresar</a></li>
    </ul>
}
