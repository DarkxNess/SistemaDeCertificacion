                                                                                        </td>

                                                                                        <td class="active">
                                                                                            @Html.DisplayFor(modelItem => item.Fabricante)
                                                                                        </td>

                                                                                        <td class="active">
                                                                                            @Html.DisplayFor(modelItem => item.PaisOrigen)
                                                                                        </td>

                                                                                        <td class="active">
                                                                                            @Html.DisplayFor(modelItem => item.DestinoMuestras)
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <br />

                            <div class="row-fluid">
                                <div class="">
                                    <fieldset>
                                        <legend>Archivos</legend>

                                        <div id="grid-contacto">
                                            <div class="row-fluid">
                                                <!--element-->
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        @*<form asp-action="QuitarArchivo">*@
                                                            <div class="row-fluid">
                                                                <div class="col-md-12">
                                                                    <table class="table table-responsive table-striped table-bordered">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Descarga</th>
                                                                                <th>
                                                                                    Nombre Archivo
                                                                                </th>
                                                                                <th>ID</th>

                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @{ if (Model.ArchivosLista != null)
                                                                                {
                                                                                    @foreach (var item in Model.ArchivosLista)
                                                                                    {

                                                                            <tr>

                                                                                <td class="active">
                                                                                    <a href="/@Html.DisplayFor(modelItem => item.RutaArchivo)" download><i class="fas fa-download fa-3x"></i></a>&nbsp; Descargar
                                                                                </td>

                                                                                <td class="active">
                                                                                    @Html.DisplayFor(modelItem => item.NombreArchivo)
                                                                                </td>
                                                                                <td class="active">
                                                                                    @Html.DisplayFor(modelItem => item.idarchivos)
                                                                                </td>


                                                                            </tr>

                                                                }
                                                                                }
                                                                            }
                                                                            </tbody>
                                                                            </table>
                                                                            </div>
                                                                            </div>
