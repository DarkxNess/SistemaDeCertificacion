                                            <div class="col-md-12">
                                                <div class="pull-right">
                                                    <table>
                                                        <tr>
                                                            <td align="center">
                                                                <form asp-action="Rechazar">
                                                                    <input asp-for="IdEnsayos" type="hidden" class="form-control" />

                                                                    <input asp-for="pedidoEnsayo_IdPedidoEnsayo" type="hidden" class="form-control" />


                                                                    <input type="submit" value="Rechazar" class="btn btn-primary" />
