    <table align="center"><tr><td><button type="button" class="btn btn-warning"> Status @Model.PresupuestoLista[0].StatusPresupuesto @mensaje </button></td></tr></table>
    <table align="center"><tr><td><button type="button" class="btn btn-warning"> Status Ensayo @Model.StatusEnsayo  </button></td></tr></table>
    <div class="pull-right">

    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="row">
                <div class="box corner-all">
                    <!--box body-->
                    <div class="panel-body">
