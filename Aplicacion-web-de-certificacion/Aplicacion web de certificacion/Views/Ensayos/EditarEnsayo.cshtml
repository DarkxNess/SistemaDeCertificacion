                                                                                        <td class="active">
                                                                                            @Html.DisplayFor(modelItem => item.Etiqueta)
                                                                                        </td>

                                                                                        <td class="">
                                                                                            @Html.DisplayFor(modelItem => item.Cantidad)
                                                                                        </td>

                                                                                        <td class="active">
                                                                                            @Html.DisplayFor(modelItem => item.Marca)
                                                                                        </td>

