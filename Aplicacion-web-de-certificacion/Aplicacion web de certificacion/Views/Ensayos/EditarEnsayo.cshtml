                            @if (Model.CotizacionesLista != null)
                            {




                                <table class="table table-bordered table-condensed">
                                    <tbody>
                                        <tr>
                                            <th>Ensayo / # Informe</th>
                                            <th>Pedido de Ensayos</th>
                                            <th>Fecha de alta</th>
                                            <th>Cliente</th>
                                            <th>Contacto</th>
                                        </tr>
