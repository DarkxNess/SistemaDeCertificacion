@model Aplicacion_web_de_certificacion.Models.LugarEnsayos

@{
    Layout = null;
    ViewData["Title"] = "EditarLugarEnsayo";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="box corner-all">
    <!--box body-->
    <div class="panel-body">
        <div class="row-fluid">
            <!--element-->
            <div class="row">
                <div class="col-md-12">


                    <div class="row">
                        <div class="col-md-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="EntidadEncargada" class="control-label">Entidad Encargada</label>
                                <input asp-for="EntidadEncargada" class="form-control" />
                                <span asp-validation-for="EntidadEncargada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Direccion" class="control-label">Dirección</label>
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>


                        </div>
                        <div class="col-md-1">
                            <input asp-for="IdLugar_De_Ensayos" class="form-control" contenteditable="false" type="hidden" />
                            <input asp-for="Entidades_IdEntidades" class="form-control" contenteditable="false" type="hidden" />
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label asp-for="TelefonoEncargado" class="control-label">Teléfono Encargado</label>
                                <input asp-for="TelefonoEncargado" class="form-control" />
                                <span asp-validation-for="TelefonoEncargado" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CorreoEncargado" class="control-label">Correo Encargado</label>
                                <input asp-for="CorreoEncargado" class="form-control" />
                                <span asp-validation-for="CorreoEncargado" class="text-danger"></span>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


